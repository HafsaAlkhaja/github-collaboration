<header>
  <div class="logo-container">
    <img src="/images/logo.png" alt="Gym Planner Logo" style="width: 200px; height: 200px;">
    <div class="text-container">
      <h1 class="head">GYM Planner</h1>
      <h3 class="quet">It's not about being perfect. It's about effort.</h3>
    </div>
  </div>

  <div class="dropdown-container">
    <div class="burger-container" onclick="toggleBurgerMenu()">
      <i class="material-icons" id="burgerIcon">menu</i>
      <i class="material-icons hidden" id="closeIcon">close</i>
      <div class="dropdown-menu burger-dropdown" id="burgerDropdownMenu">
        <ul>
          <li><a class="dropdown-item" href="/index">Home</a></li>
          <li><a class="dropdown-item" href="/exerciseCategory/index">Exercise Categories</a></li>
          <li><a class="dropdown-item" href="/schedule/index">My Schedules</a></li>
          <li><a class="dropdown-item" href="/schedule/add">Add New Schedule</a></li>
        </ul>
      </div>
    </div>
    <div class="profile-container" onclick="toggleProfileDropdown()">
      <img src="/images/logo.png" alt="Profile" class="profile-img">
      <div class="dropdown-menu profile-dropdown" id="profileDropdownMenu">
        <%if(user){%>
          <ul>
            <li><a class="dropdown-item" href="/user/profile">Profile</a></li>
            <li><a class="dropdown-item" href="/auth/logout">Sign Out</a></li>
          </ul>
          <%}else {%>
            <ul>
              <li><a class="dropdown-item" href="/auth/google">Sign In</a></li>
            </ul>
            <%}%>
      </div>
    </div>
  </div>
</header>