<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Gym Planner</title>
  <!-- Bootstrap CDN -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  <!-- Custom Styles -->
  <link rel="stylesheet" href="/css/style.css">
<%- include('partials/styles', { cssFile: '' }) %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/javascript/script.js"></script>
</head>

<body>
  <header>
    <div class="header">
      <div id="Logo">
        <img src="/images/Gym planner Logo noBg.png" alt="Gym Planner Logo">
      </div>
      <div id="menu">
        <ul>
          <li><a href="/index">Home</a></li>
          <li><a href="/exerciseCategory/index">Exercise Categories</a></li>
          <li><a href="/schedule/index">My Schedules</a></li>
        </ul>
      </div>
      <div class="profile-container">
        <% if (user) { %>
          <span class="material-symbols-outlined profile-icon" onclick="toggleProfileDropdown()">fitness_center</span>
          <div class="profile-dropdown" id="profileDropdownMenu">
            <ul>
              <li><a class="dropdown-item" href="/user/profile">Profile</a></li>
              <li><a class="dropdown-item" href="/auth/logout">Sign Out</a></li>
            </ul>
          </div>
          <% } else { %>
            <span class="material-symbols-outlined profile-icon" onclick="toggleProfileDropdown()">fitness_center</span>
            <div class="profile-dropdown" id="profileDropdownMenu">
              <ul>
                <li><a class="dropdown-item" href="/auth/google">Sign In</a></li>
              </ul>
            </div>
            <% } %>
      </div>


    </div>
  </header>

  <%- body %>


</body>

</html>