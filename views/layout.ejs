<!DOCTYPE html>
<html lang="en">

<head>
  <link rel="icon" type="image/x-icon" href="images/Logo_title.png">
  <meta charset="UTF-8">
  <title>Gym Planner</title>
  <!-- Bootstrap CDN -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  <!-- Custom Styles -->
  <link rel="stylesheet" href="/css/style.css">
  <%- include('stylingpath/styles', { cssFile: '' }) %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/javascript/script.js"></script>
</head>

<body>
  <header>
    <div class="header">
      <div id="Logo">
        <img src="/images/Gym planner Logo noBg.png" alt="Gym Planner Logo">
      </div>
      <div id="menu">
        <ul>
          <li><a href="/index">Home</a></li>
          <li><a href="/exerciseCategory/index">Exercise Categories</a></li>
          <li><a href="/schedule/index">My Schedules</a></li>
        </ul>
      </div>
      <div class="dropdowns">
        <% if (user && user.role==="admin" ) { %>
          <li class="dropdown">
            <a id="adminDropdown" role="button" >
              <span class="material-symbols-outlined profile-icon">admin_panel_settings</span>
            </a>
            <ul class="dropdown-menu" aria-labelledby="adminDropdown">
              <li><a class="dropdown-item" href="/exerciseCategory/add">Add Exercise Category</a></li>
              <li><a class="dropdown-item" href="/exercise/index">Exercises</a></li>
              <li><a class="dropdown-item" href="/exercise/add">Add Exercise</a></li>
            </ul>
          </li>
          <% } %>
      
            <li class="dropdown">
              <a id="adminDropdown" role="button" >
                <span class="material-symbols-outlined profile-icon "
                  onclick="toggleProfileDropdown()">fitness_center</span>
              </a>
              <ul class="dropdown-menu" id="profileDropdownMenu">
                <% if (user) { %>
                  <li><a class="dropdown-item" href="/user/profile">Profile</a></li>
                  <li><a class="dropdown-item" href="/auth/logout" onclick="return confirm('Are you sure you want to sign out?');">Sign Out</a></li>
                  <% } else { %>
                    <li><a class="dropdown-item" href="/auth/google">Sign In</a></li>
                    <% } %>
              </ul>
            </li>
      </div>
      </div>
  </header>

  <%- body %>

</body>
</html>